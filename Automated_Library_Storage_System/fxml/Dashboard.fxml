<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controllers.DashboardController">

    
    <top>
        <HBox spacing="15" style="-fx-background-color:#0D47A1; -fx-padding:10;">
            <children>
                <Button text="Dashboard" fx:id="dashboardButton"
                        style="-fx-text-fill:white; -fx-font-weight:bold; -fx-background-color:transparent;"/>
                <Button text="Books" fx:id="booksButton"
                        style="-fx-text-fill:white; -fx-background-color:transparent;"/>
                <Button text="Storage" fx:id="storageButton"
                        style="-fx-text-fill:white; -fx-background-color:transparent;"/>
                <Button text="Equipment" fx:id="equipmentButton"
                        style="-fx-text-fill:white; -fx-background-color:transparent;"/>
                <Button text="Charging Station" fx:id="chargingButton"
                        style="-fx-text-fill:white; -fx-background-color:transparent;"/>
                <Button text="Logs" fx:id="logsButton"
                        style="-fx-text-fill:white; -fx-background-color:transparent;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="ðŸ‘¤" fx:id="profileButton"
                        style="-fx-background-color:transparent; -fx-text-fill:white;"/>
            </children>
        </HBox>
    </top>

    
    <center>
        <GridPane hgap="15" vgap="15" padding="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <!-- Books Section -->
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10"
                  style="-fx-background-color:white; -fx-padding:15; -fx-border-color:#ccc; -fx-border-radius:10; -fx-background-radius:10;">
                <Label text="Books" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <Label text="The Great Secret"/>
                <Label text="Available" style="-fx-text-fill:green;"/>
                <Label text="Shelf C2"/>
                <Button text="Borrow The Book" fx:id="borrowBookButton"/>
            </VBox>

            <!-- Equipment Section -->
            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="10"
                  alignment="CENTER" style="-fx-background-color:white; -fx-padding:15; -fx-border-color:#ccc; -fx-border-radius:10; -fx-background-radius:10;">
                <Label text="Equipment" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <Label text="ðŸ¤–" style="-fx-font-size:48px;"/>
                <Label text="AH-L"/>
            </VBox>

            <!-- Storage Section -->
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10"
                  style="-fx-background-color:white; -fx-padding:15; -fx-border-color:#ccc; -fx-border-radius:10; -fx-background-radius:10;">
                <Label text="Storage" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <GridPane fx:id="storageGrid" hgap="5" vgap="5">
                    <children>
                        <!-- simple 3x3 slots -->
                        <Rectangle width="40" height="40" style="-fx-fill:lightgray;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Rectangle width="40" height="40" style="-fx-fill:lightgray;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Rectangle width="40" height="40" style="-fx-fill:steelblue;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    </children>
                </GridPane>
            </VBox>

      
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10"
                  style="-fx-background-color:white; -fx-padding:15; -fx-border-color:#ccc; -fx-border-radius:10; -fx-background-radius:10;">
                <Label text="Logs" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <TableView fx:id="logsTable" prefHeight="150">
                    <columns>
                        <TableColumn text="Timestamp" prefWidth="120"/>
                        <TableColumn text="Task" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox GridPane.rowIndex="0" GridPane.columnIndex="2" spacing="10"
                  style="-fx-background-color:white; -fx-padding:15; -fx-border-color:#ccc; -fx-border-radius:10; -fx-background-radius:10;"
                  GridPane.columnSpan="2" GridPane.rowSpan="2" alignment="CENTER_RIGHT">
                <Label text="Charging Station" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                <VBox spacing="8">
                    <Button text="Slot - 1 ðŸ”‹" style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>
                    <Button text="Slot - 2 ðŸ”‹" style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>
                    <Button text="Slot - 3 ðŸ”‹" style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>
                    <Button text="Slot - 4 ðŸ”‹" style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>
                </VBox>
            </VBox>
        </GridPane>
    </center>
</BorderPane>
